<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%magenta([%date]) %highlight(%-5level) %cyan([%logger{10} %file:%line]) %msg%n</pattern>
    </encoder>
  </appender>


  <logger name="l2" level="debug" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </logger>

  <root level="error">
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>
